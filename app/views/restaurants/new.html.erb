<div class="max-w-md mx-auto mt-8">
  <h2 class="text-xl font-semibold text-gray-800 mb-6 text-center">
    <%= @restaurant.new_record? ? "Nouveau Restaurant" : "Modifier" %>
  </h2>

  <%= form_with model: @restaurant, class: "space-y-4" do |f| %>
    <%= f.text_field :name,
          class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500",
          placeholder: "Nom du restaurant" %>

    <%= f.text_field :address,
          class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500",
          placeholder: "Adresse" %>

    <%= f.text_field :phone_number,
          class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500",
          placeholder: "Téléphone" %>

    <%= f.select :category,
          ["chinese", "italian", "japanese", "french", "belgian"],
          { include_blank: "Catégorie" },
          class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>

    <%= f.submit class: "w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition cursor-pointer" %>
  <% end %>

  <div class="mt-4">
    <%= link_to "Annuler", restaurants_path,
          class: "w-full bg-gray-300 text-gray-700 py-2 rounded hover:bg-gray-400 transition cursor-pointer text-center block" %>
  </div>
</div>
