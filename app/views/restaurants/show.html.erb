<div class="max-w-md mx-auto mt-8">
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-2"><%= @restaurant.name %></h2>
    <p class="text-blue-600 text-sm font-medium mb-4 capitalize"><%= @restaurant.category %></p>

    <div class="space-y-3 text-gray-700">
      <p>üìç <%= @restaurant.address %></p>
      <p>üìû <%= @restaurant.phone_number %></p>
    </div>

    <!-- Section Reviews -->
    <div class="mt-6 border-t border-gray-200 pt-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Avis</h3>

      <% @restaurant.reviews.each do |review| %>
        <div class="mb-4 pb-4 border-b border-gray-100 last:border-b-0">
          <p class="font-medium text-gray-700">Note: <%= review.rating %>/5</p>
          <p class="text-gray-600 mt-1"><%= review.content %></p>
        </div>
      <% end %>

      <div class="mt-4">
        <%= link_to "Donner mon avis", new_restaurant_review_path(@restaurant),
            class: "text-blue-600 hover:text-blue-800" %>
      </div>
    </div>

    <div class="mt-6">
      <%= link_to "‚Üê Retour √† la liste", restaurants_path, class: "text-gray-600 hover:text-gray-800" %>
    </div>
  </div>
</div>
